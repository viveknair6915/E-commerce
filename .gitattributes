# Auto detect text files and perform LF normalization
* text=auto

# Force these files to be CRLF (Windows) on checkout
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Force these files to be LF (Unix) on checkout
*.sh text eol=lf
*.py text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.ini text eol=lf
*.conf text eol=lf
*.sql text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
